[user]
	name = Alexis Georges
  email = alexis.georges@gmail.com
[core]
	ignorecase = false
  editor = vim
	quotepath = false
[color]
  ui = auto
[push]
	default = current
[alias]
  s = status
  b = branch
  l = log
  ll = log -n 1
  sl = shortlog -n
  dt = difftool -y -t Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
